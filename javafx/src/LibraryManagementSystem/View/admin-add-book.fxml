<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="660.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LibraryManagementSystem.Controller.AdminAddBookController">
   <TableView fx:id="tbl_books" layoutX="15.0" layoutY="14.0" prefHeight="424.0" prefWidth="710.0" styleClass="table-book">
      <columns>
         <TableColumn fx:id="col_id" prefWidth="35.0" text="id" />
         <TableColumn fx:id="col_title" prefWidth="220.0" text="title" />
         <TableColumn fx:id="col_genre" prefWidth="90.0" text="genre" />
         <TableColumn fx:id="col_author" prefWidth="180.0" text="author" />
         <TableColumn fx:id="col_location" prefWidth="65.0" text="location" />
         <TableColumn fx:id="col_publishTime" prefWidth="50.0" text="year" />
         <TableColumn fx:id="col_available" prefWidth="55.0" text="copies" />
      </columns>
   </TableView>
   <Button id="list_button" fx:id="btn_remove" layoutX="387.0" layoutY="470.0" mnemonicParsing="false" onMouseClicked="#RemoveBook" text="Remove books from our library booklist" textFill="#436dfb">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <Button id="list_button" fx:id="btn_add" layoutX="25.0" layoutY="469.0" mnemonicParsing="false" onMouseClicked="#AddBook" prefHeight="41.0" prefWidth="341.0" text="Add book to the library booklist" textFill="#436dfb" AnchorPane.leftAnchor="25.0">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
   <TextField id="list_text" fx:id="text_title" layoutX="14.0" layoutY="527.0" promptText="Title">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField id="list_text" fx:id="text_author" layoutX="195.0" layoutY="527.0" promptText="Author">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField id="list_text" fx:id="text_genre" layoutX="14.0" layoutY="566.0" promptText="Genre">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField id="list_text" fx:id="text_location" layoutX="195.0" layoutY="566.0" promptText="Location">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField id="list_text" fx:id="text_publish_time" layoutX="14.0" layoutY="606.0" promptText="Publish year">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
   <TextField id="list_text" fx:id="text_available" layoutX="195.0" layoutY="606.0" promptText="Copies available">
      <font>
         <Font size="14.0" />
      </font>
   </TextField>
</AnchorPane>
